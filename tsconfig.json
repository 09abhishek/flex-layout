{
  "version": "2.0.0",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "lib": ["es2015"],
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitHelpers": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "../node_modules",
    "../demos",
    "../deprecated",
    "../dist",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "deprecated",
    "demos"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useBabel" : true,
    "useCache" : true,
    "ignoreDiagnostics" : [ 2304 ]
  }
}
