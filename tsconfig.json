{
  "version": "2.0.0",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipDefaultLibCheck":true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "hammerjs", "rx/rx.all"
    ]
  },
  "exclude": [
    "**/testing/",
    "**/*.spec.*",
    "../node_modules",
    "../demos",
    "../deprecated",
    "../dist",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "deprecated",
    "demos"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useBabel" : true,
    "useCache" : true
  }
}
