{
  "compilerOptions": {
    "declaration": true,
    "noEmitOnError": true,
    "stripInternal": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "mapRoot": "",
    "lib": ["es6", "es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",

    "outDir": "../../node_modules/@angular/flex-layout",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "hammerjs", "rx/rx.all"
    ]
  },
  "exclude": [
    "**/*.spec.*",
    "tsconfig.*",
    "tsconfig-demo-app.*",
    "system-config-spec.*"
  ],
  "angularCompilerOptions": {
    "genDir": "../../node_modules/@angular/flex-layout",
    "skipTemplateCodegen": false,
    "debug": true
  }
}
