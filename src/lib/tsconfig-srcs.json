{
  "compilerOptions": {
    "declaration": true,
    "noEmitOnError": true,
    "stripInternal": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "",
    "module": "es2015",
    "moduleResolution": "node",

    // Note: `gulp build:components` deploys to `/node_modules/@angular/flex-layout`

    "outDir": "../../node_modules/@angular/flex-layout",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
    ]
  },
  "exclude": [
    "**/*.spec.*",
    "system-config-spec"
  ],
  "angularCompilerOptions": {
    "genDir": "../../node_modules/@angular/flex-layout",
    "skipTemplateCodegen": false,
    "debug": true
  }
}
