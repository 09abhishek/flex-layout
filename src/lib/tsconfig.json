{
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../dist/@angular/flex-layout",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
    ]
  },
  "exclude": [
    "**/testing/",
    "**/*.spec.*",
    "system-config-spec.*",
    "tsconfig.*",
    "tsconfig-demo-app."
  ],
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": false,
    "debug": true
  }
}
